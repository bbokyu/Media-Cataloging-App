extends ../layout.pug

block content
    h2(style="margin-bottom: 15px")= discussion_name

    if (user)
        a(href="/clubs/rcreate/" + did)
            button(type="button") Reply to this thread
    else
        a(href="/user/login")
            button(type="button") Login to reply
        

    for reply in replies
        table(style="margin-top: 10px")
            thead
                tr
                    th= reply[3]
                    th(align="right")= reply[1]
            tbody
                tr
                    td= reply[4]
